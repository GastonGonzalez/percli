#!/usr/bin/env node

const args  = require('commander')

const gen = require('../lib/htmltovue.js')

args.version('1.0.0')
	.option('-c, --container', 'component is a container')
	.option('-b, --compile', 'compile (build) the component')
    .option('-d, --deploy', 'deploy to server (note, if the model.json file has been changed a full build is necessary)')
	.usage('[options] <componentName>')
	.parse(process.argv)


if(args.args.length < 1) {
    args.help()
}

console.log(args.args[0])
if(args.args[0] === '*') {
    gen.htmltovueAll(args.container, args.compile, args.deploy)
} else {
    gen.htmltovue(args.args[0], args.container, args.compile, args.deploy)
}



